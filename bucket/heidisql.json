        "portable_settings.txt",
        "tabs.ini"
    ],
    "checkver": {
        "url": "https://www.heidisql.com/download.php",
        "regex": "Download HeidiSQL ([\\d.]+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
